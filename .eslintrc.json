{
  "parser": "babel-eslint",
  "extends": ["node", "prettier", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "import/no-commonjs": "warn",
    "no-throw-literal": "warn",
    "no-new": "warn",
    "no-unused-vars": "warn",
    "no-empty": "warn",
    "prefer-const": "warn",
    "import/no-extraneous-dependencies": "warn",
    "for-direction": "warn",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "endOfLine": "auto"
      }
    ]
  }
}
